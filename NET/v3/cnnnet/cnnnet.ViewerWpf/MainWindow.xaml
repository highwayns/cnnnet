<Window x:Class="cnnnet.ViewerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="800"
        Loaded="OnWindowLoaded"
        Closing="OnWindowClosing">
    <Grid x:Name="LayoutRoot" Width="800" Height="600">
        <Border Width="800" Height="600" Background="Black">
            <Image x:Name="image" Width="800" Height="600"/>
        </Border>

        <Border Margin="20,20" Background="#55FFFFFF" VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock Name="FpsCounter" FontFamily="Verdana" FontSize="22" ></TextBlock>
        </Border>
    </Grid>
</Window>
